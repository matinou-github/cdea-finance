<div class="main-wrapper  account-wrapper">
    <div>
        <div class="row mb-4">
            <div class="col-sm-12 text-center">
                <h2 class="text-dark">BONJOUR M/Mme <%=current_user.nom%> <%=current_user.prenom%>.</h2>
                <h5 class="text-success">Merci pour votre inscription. Veuillez finaliser votre inscription en remplissant les informations suivantes</h5>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card-box">
                    <h4 class="card-title">Information supplémentaire</h4>
                    <%= form_for @user, url: user_path(@user), method: :patch, html: { multipart: true } do |f| %>
                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Votre communue</label>
                            <div class="col-md-10">
                                <%= f.select :commune, ["N'DALI", "Pèrèrè", "Sinandé"], { prompt: "Choisissez votre commune" }, class: "form-control" %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Votre village</label>
                            <div class="col-md-10">
                                <%= f.select :village, ["Bininsi", "Bori", "Pèrèrè", "Sinawourarou"], { prompt: "Choisissez votre village" }, class: "form-control" %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-md-2">Photo CIP ou acte de naissance</label>
                            <div class="col-md-10">
                                <%= f.file_field :identity_card_photo, class: "form-control", required: true %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <%= f.label "Photo courte" %>
                                <%= f.file_field :photo_courte, class: "form-control" %>
                            </div>
                            <div class="col-md-6">
                                 <%= f.label "Photo complete" %>
                                <%= f.file_field :photo_complete, class: "form-control" %>
                            </div>
                        </div>


                        <div class="form-actions text-end">
                        <%= f.submit "Enregistrer", class: "btn btn-primary btn-lg" %>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

