<style>
.login-container, .registration-container {
  width: max-content;
  padding: 20px;
  margin: auto;
  background: #ffffff;
  border-radius: 8px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  position: absolute;
  left: 50%;
  top:50%;
  transform: translate(-50%, -50%);
}

h2 {
  text-align: center;
  color: #2d6a4f;
}

.form-group label {
  font-weight: bold;
  color: black;
}

.form-control {
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 8px;
}

.btn-primary:hover {
  background-color: #1b4d3e;
}

</style>
<div style="background-image: url(<%= asset_path('tracteur4.jpg') %>); background-size: cover;background-position: center; height:100vh; padding:20vh 0;">
  
  <div class="login-container">
    <div class="text-center">
      <a href="index-2.html"><%= image_tag 'logo.png', width: "100" %></a>
    </div>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'msform'}) do |f| %>
      <div class="form-group">
        <%= f.label :login, "E-mail ou numéro de téléphone" %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", class: "form-control", placeholder: "Entrez votre e-mail ou numéro" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Entrez votre mot de passe" %>
      </div>

      <div class="form-actions text-center">
        <%= f.submit "Se connecter", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <div class="login-footer text-center mt-2">
      <p>Je n'ai pas encore de compte ? <a class="text-cdae" href="<%=new_user_registration_path%>">CREER COMPTE</a></p>
      <hr>
      <%= link_to "Mot de passe oublié ?", new_user_password_path, class: "forgot-password-link text-cdae" %>
    </div>
  </div>
</div>
