<div class="container">
  <h2 class="text-center my-4">Assigner une Zone à un Agriculteur</h2>

  <div class="card shadow-sm">
    <div class="card-body">
      <%= form_with(model: @zone_assignment, local: true, class: "needs-validation") do |f| %>
        <div class="mb-3 form-group">
          <%= f.label :user_id, "Sélectionnez un Agriculteur", class: "form-label" %>
          <%= f.select :user_id, 
          @users.map { |user| [user.full_name, user.id] }, 
          { prompt: '-- Choisissez un agriculteur --'}, class: "form-select shadow-sm select-beast" %>
        </div>
        <div class="mb-3">
          <%= f.label :zone, "Nom de la Zone", class: "form-label" %>
          <%= f.text_field :zone, class: "form-control", placeholder: "Exemple : Zone A" %>
        </div>

        <div class="d-flex justify-content-end">
          <%= f.submit "Assigner la Zone", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= javascript_include_tag 'tom_select'%> 