<%= form_with(model: herbicide, local: true, class: "card shadow p-4") do |form| %>
  <div class="card-header bg-success text-white">
    <h3><%= herbicide.new_record? ? "Ajouter un Herbicide" : "Modifier l'Herbicide" %></h3>
  </div>

  <% if herbicide.errors.any? %>
    <div class="alert alert-danger mt-3">
      <h5><%= pluralize(herbicide.errors.count, "erreur") %> ont empêché l'enregistrement :</h5>
      <ul>
        <% herbicide.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card-body">
    <!-- Nom -->
    <div class="mb-3">
      <%= form.label :nom, "Nom de l'Herbicide", class: "form-label" %>
      <%= form.text_field :nom, class: "form-control", placeholder: "Ex: Roundup" %>
    </div>

    <!-- Prix -->
    <div class="mb-3">
      <%= form.label :prix, "Prix de l'Herbicide (F CFA)", class: "form-label" %>
      <%= form.number_field :prix, step: 0.01, class: "form-control", placeholder: "Ex: 2500" %>
    </div>

  <!-- Garantie -->
    <div class="mb-3">
      <%= form.label :prix, "Garentie pour l'Herbicide (F CFA)", class: "form-label" %>
      <%= form.number_field :garantie_par_litre, step: 0.01, class: "form-control", placeholder: "Ex: 2500" %>
    </div>

    <!-- Soja à rembourser -->
    <div class="mb-3">
      <%= form.label :prix, "Soja par litre", class: "form-label" %>
      <%= form.number_field :soja_par_litre, step: 0.01, class: "form-control", placeholder: "Ex: 2500" %>
    </div>
  </div>

  <div class="card-footer text-end">
    <%= form.submit herbicide.new_record? ? "Créer l'Herbicide" : "Mettre à jour", class: "btn btn-success" %>
  </div>
<% end %>
