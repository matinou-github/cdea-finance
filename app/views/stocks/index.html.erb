
<div class="container mt-2">
  <div class="row mb-4">
    <div class="col text-end">
      <%= link_to "Nouveau stock", new_stock_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="card shadow-lg border-0">
    <div class="card-header btn-cdae text-white">
      <h4><i class="fas fa-seedling"></i> STOCKS</h4>
    </div>
    <div class="card-body table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>ID</th>
            <th>Agriculteur</th>
            <th>Type de stock</th>
            <th>Entrée</th>
            <th>Sortie</th>
            <th>Total</th>
            <th>Enregistré par</th>
            <th>Enregistré le</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each_with_index do |stock, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%=stock.user.identification%></td>
              <td><%= stock.user.full_name %></td>
              <td>
                <%if stock.produit == "mais"%>
                  Maïs
                <%else%>
                  <%= stock.produit.capitalize %>
                <%end%>
              </td>
              <td>
                    <%= stock.debit %> <%= stock.produit == "cash" ? "FCFA" : "Kg" %>
              </td>
              <td>
                <%= stock.credit %> <%= stock.produit == "cash" ? "FCFA" : "Kg" %>
              </td>
               <td>
                <%= stock.valeur %> <%= stock.produit == "cash" ? "FCFA" : "Kg" %>
              </td>
              <td><%= stock.save_by %></td>
              <td><%= stock.created_at %></td>
              <td>
                <div class="btn-group" role="group">
                  <%#= link_to 'Voir', stock_path(stock), class: "btn btn-info btn-sm" %>
                  <%= link_to 'Modifier', edit_stock_path(stock), class: "btn btn-warning btn-sm" %>
                  <%#= link_to 'Supprimer', stock_path(stock), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer ce stock ?' }, class: "btn btn-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
  <div class="d-flex mt-4" style="justify-content:space-between;">
    <div>
      <%= page_entries_info @stocks, entry_name: "stocks" %>
    </div>
    <div>
      <%= paginate @stocks %>
    </div>
  </div>
</div>

